
<div id="mediaCarouselDesktop" class="carousel slide mb-4 mt-0 p-0 d-none d-sm-block" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        {% for key, item in media %}
            <li data-target="#mediaCarouselDesktop" data-slide-to="{{ key }}" class="active"></li>
        {% endfor %}
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        {% for index, item in media %}
            <div class="carousel-item {% if index == 0 %}active{% endif %}">
                {{ bitbag_cms_render_media(item.code) }}
            </div>
        {% endfor %}
    </div>
    <!-- Controls -->
    <a class="carousel-control-prev" href="#mediaCarouselDesktop" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#mediaCarouselDesktop" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div id="mediaCarouselMobile" class="carousel slide mb-4 mt-0 p-0 d-block d-sm-none" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        {% for key, item in media %}
            <li data-target="#mediaCarouselMobile" data-slide-to="{{ key }}" class="active"></li>
        {% endfor %}
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        {% for index, item in media %}
            {% set path = item.path|imagine_filter('sylius_shop_slider_mobile_thumbnail') %}
            <div class="carousel-item {% if index == 0 %}active{% endif %}">
                <img class="d-block img-fluid" src="{{ path }}" alt="{{ item.name }}" />
            </div>
        {% endfor %}
    </div>
    <!-- Controls -->
    <a class="carousel-control-prev" href="#mediaCarouselMobile" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#mediaCarouselMobile" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

