        {% for address in app.user.customer.addresses %}
            <div class="col choose-address-item mx-0 p-0">
                {% include '@SyliusShop/Checkout/Address/Book/_item.html.twig' %}
            </div>
        {% endfor %}
    </div>
    <div class="slider-controls mt-0 mt-xl-3"></div>
{% endif %}
