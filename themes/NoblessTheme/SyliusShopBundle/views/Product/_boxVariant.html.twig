<div class="variants-container justify-content-center">
    {% for variant in productVariants %}
        {% for option in variant.optionValues %}
            <span class="m-1 option-value{% if variant.onHand == 0 %} option-disabled{% endif %}">
                {{ option.code|upper }}
                {% if variant.onHand == 0 %}
                    <span class="out-of-stock {{ option.code|lower }}"></span>
                {% endif %}
            </span>
        {% endfor %}
    {% endfor %}
</div>