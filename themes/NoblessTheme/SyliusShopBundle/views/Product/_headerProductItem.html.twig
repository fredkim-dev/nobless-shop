{% import "@SyliusShop/Common/Macro/money.html.twig" as money %}
{% import "@SyliusShop/Common/Macro/icons.html.twig" as icons %}

{% set hideActions = false %}
{% if parentRoute is defined %}
    {% if parentRoute == 'sylius_shop_cart_summary' or 'sylius_shop_checkout_' in parentRoute %}
        {% set hideActions = true %}
    {% endif %}
{% endif %}

{% set maxQtyInCart = sylius_max_qty_in_cart(item) %}

{% set product = variant.product %}
{% if cart_widget is not defined %}
    {% set div_order = ' order-first' %}
    {% set class_padding = 'px-3' %}
{% else %}
    {% set div_order = ' order-last' %}
    {% set class_padding = 'px-0' %}
{% endif %}

<div class="d-flex align-items-start {{ class_padding }} mb-3">
    <div class="mr-3 product-img-order {{ div_order }}">
        {% include '@SyliusShop/Product/_mainImage.html.twig' with {'product': product, 'filter': 'sylius_shop_order_info_thumbnail', 'class': 'p-0 img-fluid'} %}
    </div>
    <div class="media-body d-flex flex-column justify-content-between">
        <div>
            <div class="d-flex flex-row justify-content-between align-items-start">
                <div class="item-title size-up font-weight-bold"><a href="{{ path('sylius_shop_product_show', {'slug': product.slug, '_locale': product.translation.locale}) }}">{{ item.productName }}</a></div>
                <button type="button"
                        data-js-remove-from-cart-button
                        data-js-remove-from-cart-csrf-token="{{ csrf_token(item.id) }}"
                        data-js-remove-from-cart-api-url="{{ path('sylius_shop_ajax_cart_item_remove', {'id': item.id}) }}"
                        class="p-0 btn btn-md btn-link delete-product-ajax {% if noAjax is defined or hideActions %}d-none{% endif %}">{{ icons.times() }}</button>
            </div>
            {% if product.isBundle() %}
                {{ bitbag_render_product_bundle_cart_widget_order_items(item) }}
            {% else %}
                {% if product.hasOptions() %}
                    <div>
                        {% for optionValue in variant.optionValues %}
                            <div data-sylius-option-name="{{ optionValue.name }}">
                                <span>{{ optionValue.value }}</span>
                            </div>
                        {% endfor %}
                    </div>
                {% elseif item.variantName is not null %}
                    <div>
                        <span>{{ item.variantName }}</span>
                    </div>
                {% endif %}
            {% endif %}
            <div>
                {% if noAjax is not defined and not hideActions %}
                    <span> {{ 'sylius.ui.quantity'|trans }} : <input type="number" value="{{ item.quantity }}" name="" class="qty ajax-qty" min="1" max="{{ maxQtyInCart }}"/>
                        <img src="{{ asset('nobless-theme/images/reload.png', 'noblessTheme') }}"
                             class="reload-icon reload-qty ajax d-none"
                             data-js-reload-qty-button
                             data-js-update-qty-csrf-token="{{ csrf_token(item.id) }}"
                             data-js-update-qty-url="{{ path('sylius_shop_ajax_cart_item_update', {'id': item.id}) }}"
                             data-js-update-qty-value
                        />
                    </span>
                {% else %}
                    <span> {{ 'sylius.ui.quantity'|trans }} : {{ item.quantity }}</span>
                {% endif %}
            </div>
        </div>
        <div>
            {# Product price #}
            {% if item.unitPrice == item.discountedUnitPrice %}
                {% set productPrice = item.unitPrice %}
            {% else %}
                {% set productPrice = item.discountedUnitPrice %}
            {% endif %}
            <span>{{ money.convertAndFormat(item.discountedUnitPrice) }}</span>
        </div>
    </div>
</div>
