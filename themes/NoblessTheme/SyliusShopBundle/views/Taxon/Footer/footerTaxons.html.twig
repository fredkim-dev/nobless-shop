{% if taxons|length > 0 %}
    <h5 class="bookman-title is-underline">{{ 'sylius.ui.shop_catalog'|trans }}</h5>
    {% for taxon in taxons %}
        <a href="{{ path('sylius_shop_product_index', {'slug': taxon.slug, '_locale': taxon.translation.locale}) }}">{{ taxon.name }}</a>
    {% endfor %}
{% endif %}
