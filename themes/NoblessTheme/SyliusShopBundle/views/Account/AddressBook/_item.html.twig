<div class="card">
    <div class="card-body">
        {% include '@SyliusShop/Account/AddressBook/_address.html.twig' with {'address': address} %}
        <div class="row">
            <div class="col-12 col-sm-6">
                {{ render(path('sylius_shop_account_address_book_set_as_default', {'id': address.id})) }}
            </div>
            <div class="col-12 col-sm-6 d-flex justify-content-start justify-content-sm-end mt-2 mt-sm-0">
                <a href="{{ path('sylius_shop_account_address_book_update', {'id': address.id}) }}" class="btn btn-link pl-0">{{ 'sylius.ui.edit'|trans }}</a>

                <form action="{{ path('sylius_shop_account_address_book_delete', {'id': address.id}) }}" method="post" onsubmit="return confirm('{{ "sylius.ui.are_your_sure_you_want_to_perform_this_action"|trans }}');">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-link text-muted" type="submit">
                        {{ 'sylius.ui.delete'|trans }}
                    </button>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token(address.id) }}" />
                </form>
            </div>
        </div>
    </div>
</div>
