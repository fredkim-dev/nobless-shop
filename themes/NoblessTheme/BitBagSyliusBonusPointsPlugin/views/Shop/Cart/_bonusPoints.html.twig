{# {% form_theme form '@BitBagSyliusBonusPointsPlugin/Shop/Form/theme.html.twig' %} #}

{% if form.bonusPoints is defined %}
    <div class="total-separator w-75 mx-auto mt-3 mb-2"></div>
    <div id="bitbag-bonus-points">
        <div class="d-flex flex-column">
            <span class="text-muted mb-2">{{ 'bitbag_sylius_bonus_points.ui.you_have_bonus_points_available'|trans }}: {{ (bitbag_active_bonus_points() / 100) }}</span>
            <div class="coupon-input input-group mb-2 mr-sm-2">
                {{ form_widget(form.bonusPoints, {'attr': {'placeholder': 'bitbag_sylius_bonus_points.ui.bonus_points'|trans~'...'}}) }}
                {{ form_errors(form.bonusPoints) }}
                <div class="input-group-append">
                    <button class="btn input-group-text coupon-code-btn"><svg class="svg-inline--fa fa-long-arrow-alt-right fa-w-14" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="long-arrow-alt-right" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" data-fa-i2svg=""><path fill="currentColor" d="M313.941 216H12c-6.627 0-12 5.373-12 12v56c0 6.627 5.373 12 12 12h301.941v46.059c0 21.382 25.851 32.09 40.971 16.971l86.059-86.059c9.373-9.373 9.373-24.569 0-33.941l-86.059-86.059c-15.119-15.119-40.971-4.411-40.971 16.971V216z"></path></svg><!-- <i class="fas fa-long-arrow-alt-right"></i> --></button>
                </div>
            </div>
            <span class="coupon-error px-2"></span>
        </div>
    </div>
{% endif %}
